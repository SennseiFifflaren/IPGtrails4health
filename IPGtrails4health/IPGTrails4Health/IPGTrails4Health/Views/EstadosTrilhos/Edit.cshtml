@model IPGTrails4Health.Models.EstadoTrilho

@{
    ViewData["Title"] = "Editar estado do trilho";
}
<br/>
<h2>Editar estado do trilho</h2>
<br/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EstadoTrilhoId" class="control-label"></label>
                <input asp-for="EstadoTrilhoId" class="form-control" />
                <span asp-validation-for="EstadoTrilhoId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="EstadoId" />
            <input type="hidden" asp-for="TrilhoId" />
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Causa" class="control-label"></label>
                <input asp-for="Causa" class="form-control" />
                <span asp-validation-for="Causa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-info">Voltar à Lista</a>
</div>

