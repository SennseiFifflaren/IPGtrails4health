@model IEnumerable<IPGTrails4Health.Models.Restaurante>

@{
    ViewData["Title"] = "Restaurantes";
}

<br />
<h2>Restaurantes</h2>
<br />
<p>
    <a asp-action="Create" class="btn btn-outline-primary">Adicionar novo Restaurante</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contacto)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contacto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidade.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RestauranteId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RestauranteId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RestauranteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
