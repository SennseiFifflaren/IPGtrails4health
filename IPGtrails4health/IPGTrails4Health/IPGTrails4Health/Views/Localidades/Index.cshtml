@model IEnumerable<IPGTrails4Health.Models.Localidade>

@{
    ViewData["Title"] = "Index";
}
</p>
<h2>Localidades</h2>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Criar nova Localidade</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CodigoPostal)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoPostal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LocalidadeId" class="btn btn-outline-info">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.LocalidadeId" class="btn btn-outline-warning">Detalhes</a> 
                <a asp-action="Delete" asp-route-id="@item.LocalidadeId" class="btn btn-outline-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
