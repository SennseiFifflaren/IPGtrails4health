@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Utilizadores";
}

<h2>Utilizadores</h2>

<div class="bg-primary m-1 p-1 text-white"><h4>Contas de Utilizadores</h4></div>
<table class="table table-sm table-bordered">
    <tr><th>Email</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="1" class="text-center">Sem contas de Utilizadores</td></tr>
    }
    else
    {
        foreach (var user in Model)
        {
            <tr><td>@user.Email</td></tr>
        }
    }
</table>

<a class="btn btn-primary" asp-action="Create">Criar</a>