@model IPGTrails4Health.Models.RestauranteTrilho

@{
    ViewData["Title"] = "Editar restaurantes/trilhos";
}
<br/>
<h2>Editar restaurante associados a um trilho</h2>
<br/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RestauranteTrilhoId" class="control-label"></label>
                <input asp-for="RestauranteTrilhoId" class="form-control" />
                <span asp-validation-for="RestauranteTrilhoId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="TrilhoId" />
            <input type="hidden" asp-for="RestauranteId" />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-info">Voltar à Lista</a>
</div>

