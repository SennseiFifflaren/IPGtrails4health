            <div class="form-group">
                <label asp-for="EstadoTrilho" class="control-label">Estado</label>
                <input asp-for="EstadoTrilho" class="form-control" />
                <span asp-validation-for="EstadoTrilho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
