@model IEnumerable<IPGTrails4Health.Models.Trilho>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista de Trilhos</h2>

<p>
    <a asp-action="Create">Criar Novo Trilho</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Partida)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Chegada)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Distancia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duracao)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Dificuldade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EpocaAno)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Partida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chegada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distancia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duracao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dificuldade.DificuldadeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EpocaAno.EpocaAnoId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TrilhoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.TrilhoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.TrilhoId" class="btn-outline-danger">Desativar</a>
            </td>
        </tr>
}
    </tbody>
</table>
