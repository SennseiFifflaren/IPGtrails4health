@model IEnumerable<IPGTrails4Health.Models.AreaDescanso>

@{
    ViewData["Title"] = "Áreas de Descanso";
}

<br />
<h2>Áreas de Descanso</h2>
<br />
<p>
    <a asp-action="Create" class="btn btn-outline-primary">Adicionar nova Área de Descanso</a>
</p>

<br />
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Localizacao)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localizacao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AreaDescansoId" class="btn btn-outline-warning">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.AreaDescansoId" class="btn btn-outline-info">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.AreaDescansoId" class="btn btn-outline-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
